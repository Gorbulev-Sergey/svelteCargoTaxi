{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"printWidth": 130,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
